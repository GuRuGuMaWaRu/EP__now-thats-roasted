doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    //- link(rel="stylesheet" href="/public/styles.css")
    title= `${title} | ${h.siteName}`
  body
    block messages
      if locals.flashes
        .flash-messages
          - const categories = Object.keys(locals.flashes)
          each category in categories
            each message in flashes[category]
              .flash(class=`flash--${category}`)
                p.flash__text!= message
                button.flash__remove(onClick="this.parentElement.remove()") &times;

    block header
      div
        span ---
          a(href="/") Home
        span ---
          a(href="/realms") Realms
        span ---
          a(href="/tags") Tags
        span ---
          a(href="/addRealm") Add Realm
        if user
          span ---
            a(href="/logout") Logout
          span
            a(href="/account")
              img.gravatar(src=user.gravatar)
        else
          span ---
            a(href="/register") Register
          span ---
            a(href="/login") Log In
      .nav__section--search
        .search
          input.search__input(type="text" placeholder="Gondor, Mordor..." name="search")
          .search__results
    block content
      div This is the default Content

    block footer
      div This is the default Footer
